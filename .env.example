# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=neurosync
POSTGRES_USER=neurosync
POSTGRES_PASSWORD=neurosync_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redis_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-super-secret-key-change-in-production

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW_UID=50000
AIRFLOW_GID=50000

# LLM Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Vector Store
FAISS_INDEX_PATH=/app/data/vector_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# Environment
ENVIRONMENT=development
DEBUG=true

# Data Warehouse Configuration
# Snowflake
SNOWFLAKE_ACCOUNT=your-snowflake-account
SNOWFLAKE_USERNAME=your-snowflake-username
SNOWFLAKE_PASSWORD=your-snowflake-password
SNOWFLAKE_DATABASE=your-snowflake-database
SNOWFLAKE_SCHEMA=your-snowflake-schema
SNOWFLAKE_WAREHOUSE=your-snowflake-warehouse
SNOWFLAKE_ROLE=your-snowflake-role

# Google BigQuery
BIGQUERY_PROJECT_ID=your-bigquery-project-id
BIGQUERY_DATASET_ID=your-bigquery-dataset-id
BIGQUERY_CREDENTIALS=/path/to/your/bigquery-credentials.json

# Amazon Redshift
REDSHIFT_HOST=your-redshift-cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=your-redshift-database
REDSHIFT_USERNAME=your-redshift-username
REDSHIFT_PASSWORD=your-redshift-password

# Databricks
DATABRICKS_HOST=your-workspace.cloud.databricks.com
DATABRICKS_HTTP_PATH=/sql/1.0/warehouses/your-warehouse-id
DATABRICKS_ACCESS_TOKEN=your-databricks-access-token

# ClickHouse
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=your-clickhouse-password
